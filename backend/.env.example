FLASK_ENV=development
FLASK_DEBUG=1

# Used by `run.py`
FLASK_APP=backend.app:create_app

# Security
SECRET_KEY=dev-secret-change-me

# Database
# - SQLite (default): sqlite:///./app.db
# - Postgres example: postgresql+psycopg://user:pass@localhost:5432/dbname
DATABASE_URL=sqlite:///./app.db

# CORS (comma-separated origins) - keep "*" only for local dev
CORS_ORIGINS=*



